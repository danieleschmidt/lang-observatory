# Production Environment Configuration for LLM Observatory
# DO NOT COMMIT ACTUAL SECRETS - Use secret management systems

# Basic Configuration
NODE_ENV=production
LOG_LEVEL=info
PORT=3000

# Database Configuration
# Replace with actual production database URL
DATABASE_URL=postgres://observatory:SECURE_PASSWORD@postgres:5432/llm_observatory
POSTGRES_PASSWORD=SECURE_POSTGRES_PASSWORD

# Cache Configuration
# Replace with actual Redis configuration
REDIS_URL=redis://:SECURE_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=SECURE_REDIS_PASSWORD

# LLM Observatory Features
ENABLE_QUANTUM_FEATURES=true
ENABLE_NEUROMORPHIC_PROCESSING=true
ENABLE_AI_OPTIMIZATION=true
ENABLE_ADVANCED_SECURITY=true
ENABLE_ENTERPRISE_FEATURES=true
ENABLE_HYPERSCALE=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_CROSS_SYSTEM_OPTIMIZATION=true

# Langfuse Configuration
LANGFUSE_HOST=http://langfuse:3000
LANGFUSE_PUBLIC_KEY=pk-lf-REPLACE_WITH_ACTUAL_KEY
LANGFUSE_SECRET_KEY=sk-lf-REPLACE_WITH_ACTUAL_SECRET
NEXTAUTH_SECRET=SECURE_NEXTAUTH_SECRET

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_PASSWORD=SECURE_GRAFANA_PASSWORD

# Performance Configuration
TARGET_LATENCY=200
TARGET_THROUGHPUT=10000
MAX_CONCURRENCY=1000
CACHE_HIT_RATE_TARGET=0.95
OPTIMIZATION_INTERVAL=60000

# Security Configuration
THREAT_DETECTION_ENABLED=true
THREAT_SCORE_THRESHOLD=0.7
AUTO_BLOCK_THRESHOLD=0.9
SECURITY_SCAN_INTERVAL=300000

# Resilience Configuration
FAILOVER_THRESHOLD=3
RECOVERY_TIMEOUT=300000
HEALTH_CHECK_INTERVAL=30000
ENABLE_CIRCUIT_BREAKERS=true
ENABLE_BULKHEAD_PATTERN=true

# AI Optimization Configuration
ML_OPTIMIZATION_ENABLED=true
LEARNING_RATE=0.01
MEMORY_SIZE=10000
MODEL_UPDATE_INTERVAL=3600000
PREDICTION_WINDOW=3600000

# Scaling Configuration
ENABLE_AUTO_SCALING=true
ENABLE_PREDICTIVE_SCALING=true
SCALE_UP_THRESHOLD=0.7
SCALE_DOWN_THRESHOLD=0.3
SCALE_UP_COOLDOWN=60000
SCALE_DOWN_COOLDOWN=300000

# Resource Limits
MAX_MEMORY_USAGE=4096
MAX_CPU_USAGE=2000
MAX_DISK_USAGE=10240
MAX_NETWORK_BANDWIDTH=1000

# Compliance Configuration
ENABLE_GDPR_COMPLIANCE=true
ENABLE_CCPA_COMPLIANCE=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years

# Telemetry Configuration
ENABLE_TELEMETRY=true
TELEMETRY_ENDPOINT=https://telemetry.example.com
TELEMETRY_API_KEY=SECURE_TELEMETRY_KEY

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=SECURE_BACKUP_ENCRYPTION_KEY

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/observatory.crt
SSL_KEY_PATH=/etc/ssl/private/observatory.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# External Integrations
OPENAI_API_KEY=SECURE_OPENAI_KEY
ANTHROPIC_API_KEY=SECURE_ANTHROPIC_KEY
COHERE_API_KEY=SECURE_COHERE_KEY
HUGGINGFACE_API_KEY=SECURE_HUGGINGFACE_KEY

# Webhook Configuration
WEBHOOK_SECRET=SECURE_WEBHOOK_SECRET
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRIES=3

# Development/Debug (Disable in production)
DEBUG_MODE=false
ENABLE_DEBUG_LOGGING=false
ENABLE_PROFILING=false
ENABLE_MEMORY_DUMPS=false

# Cluster Configuration
CLUSTER_MODE=true
CLUSTER_REPLICAS=3
CLUSTER_SHARD_KEY=SECURE_CLUSTER_SHARD_KEY

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL=false

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=https://observatory.company.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=SECURE_SESSION_SECRET
SESSION_TIMEOUT=3600000  # 1 hour
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false
CSP_REPORT_URI=https://csp-report.company.com/report

# Feature Flags
FEATURE_QUANTUM_ALPHA=true
FEATURE_NEUROMORPHIC_BETA=true
FEATURE_AI_OPTIMIZER_GA=true
FEATURE_SECURITY_ENHANCED=true
FEATURE_PERFORMANCE_EXTREME=true