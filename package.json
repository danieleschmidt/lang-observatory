{
  "name": "lang-observatory",
  "version": "0.1.0",
  "description": "A turnkey observability stack for large language models",
  "main": "index.js",
  "scripts": {
    "dev": "helm template lang-observatory ./charts/lang-observatory --values ./charts/lang-observatory/values.yaml",
    "build": "helm package ./charts/lang-observatory",
    "test": "npm run test:unit && npm run test:integration && npm run test:helm",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:helm": "helm lint ./charts/lang-observatory && helm template ./charts/lang-observatory --validate",
    "test:e2e": "kubectl apply -f tests/e2e/test-deployment.yaml && helm test lang-observatory",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:performance:baseline": "k6 run --out json=performance-results/baseline.json tests/performance/baseline-test.js",
    "test:performance:memory-usage": "node --expose-gc tests/performance/memory-usage-test.js",
    "test:performance:memory-profile": "node --heap-prof --heap-prof-interval=10000 tests/performance/memory-profile-test.js",
    "test:resilience": "node tests/chaos/resilience-test-runner.js",
    "test:playwright": "playwright test",
    "test:mutation": "stryker run",
    "test:contract": "pact-broker",
    "test:ai-patterns": "jest tests/patterns/",
    "test:bias": "node tests/patterns/bias-fairness-testing.js",
    "test:cost-efficiency": "k6 run tests/performance/scenarios/llm-cost-tracking.js",
    "test:model-regression": "jest tests/patterns/model-performance-regression.test.js",
    "test:slo-monitoring": "k6 run tests/performance/slo-validation.js",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "prettier --write \"**/*.{yaml,yml,json,md}\"",
    "format": "prettier --check \"**/*.{yaml,yml,json,md}\"",
    "clean": "rm -rf charts/lang-observatory/charts/ charts/lang-observatory/Chart.lock *.tgz",
    "deps": "helm dependency update ./charts/lang-observatory",
    "helm:install": "helm install lang-observatory ./charts/lang-observatory",
    "upgrade": "helm upgrade lang-observatory ./charts/lang-observatory",
    "uninstall": "helm uninstall lang-observatory",
    "status": "helm status lang-observatory",
    "validate": "helm template ./charts/lang-observatory | kubectl apply --dry-run=client -f -",
    "security:scan": "npm run security:trivy && npm run security:kubesec",
    "security:trivy": "which trivy >/dev/null 2>&1 && trivy fs --security-checks vuln,config . || echo 'Warning: trivy not found, skipping security scan'",
    "security:kubesec": "which kubesec >/dev/null 2>&1 && kubesec scan charts/lang-observatory/templates/*.yaml || echo 'Warning: kubesec not found, skipping security scan'",
    "docs:generate": "helm-docs --chart-search-root=charts",
    "release": "semantic-release",
    "precommit": "npm run lint && npm run test:helm && npm run security:scan",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yaml,yml,json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/terragon-labs/lang-observatory.git"
  },
  "keywords": [
    "observability",
    "llm",
    "langfuse",
    "openlit",
    "prometheus",
    "grafana",
    "helm",
    "kubernetes",
    "opentelemetry"
  ],
  "author": "Terragon Labs <opensource@terragonlabs.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/terragon-labs/lang-observatory/issues"
  },
  "homepage": "https://github.com/terragon-labs/lang-observatory#readme",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "8.0.1",
    "helmet": "8.1.0",
    "isomorphic-dompurify": "2.26.0",
    "joi": "18.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "semantic-release": "^22.0.12",
    "supertest": "6.3.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "volta": {
    "node": "20.11.0",
    "npm": "10.2.4"
  }
}
