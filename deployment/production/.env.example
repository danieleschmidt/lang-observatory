# Production Environment Configuration for Lang Observatory

# Application Version
VERSION=latest

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/langobservatory

# Redis Configuration
REDIS_URL=redis://redis:6379

# Langfuse Configuration
LANGFUSE_PUBLIC_KEY=pk-lf-your_public_key_here
LANGFUSE_SECRET_KEY=sk-lf-your_secret_key_here
LANGFUSE_HOST=https://your-domain.com/langfuse
LANGFUSE_NEXTAUTH_SECRET=your_nextauth_secret_here_32_chars_min
LANGFUSE_SALT=your_salt_here_32_chars_minimum
LANGFUSE_ENCRYPTION_KEY=your_encryption_key_here_32_chars

# OpenLIT Configuration
OPENLIT_ENDPOINT=http://openlit-collector:4317

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Security Configuration
JWT_SECRET=your_jwt_secret_here_64_chars_minimum_for_production_security
API_KEY_SECRET=your_api_key_secret_here_64_chars_minimum
ENCRYPTION_KEY=your_encryption_key_here_32_chars_minimum
RATE_LIMIT_ENABLED=true
SECURITY_HEADERS_ENABLED=true
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# Performance Configuration
INTELLIGENT_CACHING_ENABLED=true
NEUROMORPHIC_PROCESSING_ENABLED=true
QUANTUM_OPTIMIZATION_ENABLED=true
MAX_REQUEST_SIZE=10mb
WORKER_PROCESSES=auto
PM2_INSTANCES=max

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=100m

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/certs/your-domain.key

# External Service URLs (if applicable)
EXTERNAL_PROMETHEUS_URL=https://prometheus.your-domain.com
EXTERNAL_GRAFANA_URL=https://grafana.your-domain.com
EXTERNAL_LANGFUSE_URL=https://langfuse.your-domain.com

# Resource Limits
MAX_MEMORY_USAGE=2048
MAX_CPU_USAGE=2000
REDIS_MAX_MEMORY=512mb
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_MAX_CONNECTIONS=200

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Alert Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_EMAIL=alerts@your-domain.com
PAGERDUTY_SERVICE_KEY=your_pagerduty_service_key

# Feature Flags
FEATURE_AI_INSIGHTS=true
FEATURE_COST_OPTIMIZATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MULTI_TENANT=false
FEATURE_AUDIT_LOGGING=true

# Compliance & Privacy
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
ANONYMIZE_PII=true
ENCRYPT_AT_REST=true