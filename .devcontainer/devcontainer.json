{
  "name": "Lang Observatory Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "automatic",
      "userUid": "automatic",
      "userGid": "automatic"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-vscode.vscode-typescript-next",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vsliveshare.vsliveshare",
        "humao.rest-client",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "cweijan.vscode-postgresql-client2"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "files.exclude": {
          "**/node_modules": true,
          "**/.git": true,
          "**/.DS_Store": true,
          "**/tmp": true,
          "**/dist": true,
          "**/build": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/build": true,
          "**/*.min.js": true
        },
        "typescript.suggest.autoImports": true,
        "javascript.suggest.autoImports": true,
        "emmet.includeLanguages": {
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        }
      }
    }
  },

  "forwardPorts": [
    3000,
    4317,
    5432,
    6379,
    8080,
    9090,
    9091
  ],

  "portsAttributes": {
    "3000": {
      "label": "Langfuse UI",
      "onAutoForward": "notify"
    },
    "4317": {
      "label": "OTEL Collector",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "Grafana",
      "onAutoForward": "notify"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "notify"
    },
    "9091": {
      "label": "Prometheus Push Gateway",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "npm install && npm run deps && helm repo add prometheus-community https://prometheus-community.github.io/helm-charts && helm repo add grafana https://grafana.github.io/helm-charts && helm repo update",
  "postStartCommand": "echo 'Lang Observatory dev environment ready! Use: npm run dev'",

  "remoteUser": "node",
  "workspaceFolder": "/workspaces/lang-observatory",

  "containerEnv": {
    "NODE_ENV": "development",
    "DEBUG": "lang-observatory:*",
    "LANGFUSE_HOST": "http://localhost:3000",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
    "DATABASE_HOST": "localhost",
    "DATABASE_PORT": "5432",
    "REDIS_HOST": "localhost",
    "REDIS_PORT": "6379"
  }
}